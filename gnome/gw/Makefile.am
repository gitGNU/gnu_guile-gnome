include $(top_srcdir)/common.mk

guilegwmodule_DATA = gtksourceview-spec.scm gtksourceview.scm

EXTRA_DIST = gtksourceview-spec.scm

# There is one shared library for each wrapset. Each is produced by
# g-wrap, but also may contain some hand-coded routines.

lib_LTLIBRARIES = libgw-guile-gnome-gtksourceview.la

########################################################################
## GtkSourceView
nodist_libgw_guile_gnome_gtksourceview_la_SOURCES = \
	guile-gnome-gw-gtksourceview.c
libgw_guile_gnome_gtksourceview_la_SOURCES = \
	source-view-support.c source-view-support.h

libgw_guile_gnome_gtksourceview_la_CFLAGS = $(GUILE_GLIB_CFLAGS) \
	$(AM_CFLAGS) $(GTKSOURCEVIEW_CFLAGS) $(GUILE_CFLAGS) \
	$(G_WRAP_CFLAGS)

libgw_guile_gnome_gtksourceview_la_LIBADD = $(GTKSOURCEVIEW_LIBS) \
	$(GUILE_LIBS) $(G_WRAP_LINK_ARGS) $(GUILE_GLIB_LIBS)

libgw_guile_gnome_gtksourceview_la_LDFLAGS = -module

CLEANFILES = $(wildcard gnome-*.log) \
	     $(wildcard guile-gnome-gw-gtksourceview.*) \
             gtksourceview.scm

BUILT_SOURCES = guile-gnome-gw-gtksourceview.c
