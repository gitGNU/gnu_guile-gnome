#!/bin/sh

pwd=`pwd`
this_dir=`dirname $0`
this_dir=`readlink -f $this_dir`
src_dir=@top_srcdir@
cd $this_dir
src_dir=`readlink -f $src_dir`
cd $pwd

ALL_PKGS="glib atk pango gtk libgda"

for pkg in $ALL_PKGS; do
  if [ -d $src_dir/$pkg ]; then
    case $pkg in
      glib) LD_LIBRARY_PATH=$this_dir/$pkg/gnome/gobject:$LD_LIBRARY_PATH
	;;
    esac
    GUILE_LOAD_PATH=$src_dir/$pkg:$this_dir/$pkg:$GUILE_LOAD_PATH
    LD_LIBRARY_PATH=$this_dir/$pkg/gnome/gw:$LD_LIBRARY_PATH
  fi
done

export GUILE_LOAD_PATH LD_LIBRARY_PATH

exec "$@"
